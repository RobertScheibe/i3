#change keyboard layout
bindsym $ms+d exec "setxkbmap de; xmodmap -e 'clear Lock' -e 'keysym Caps_Lock = Escape'; echo 'DE' > /tmp/keyboard.txt; killall -USR1 i3status"
bindsym $ms+e exec "setxkbmap us; xmodmap -e 'clear Lock' -e 'keysym Caps_Lock = Escape'; echo 'EN' > /tmp/keyboard.txt; killall -USR1 i3status"
